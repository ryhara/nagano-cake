<div class="container">
  <div class="">
    <h2><span class="badge bg-light text-dark my-3">マイページ</span></h2>
    <div>
      <%= form_with model:@genre, url: admin_genres_path do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name ,placeholder:"ジャンル名"%>
          <%= f.submit "新規登録", class:"btn btn-success actions ml-3" %>
      <% end %>
    </div>
  </div>
  
  <div class="row my-3">
    <div class="col-4">
    <table class="table mt-5">
      <thead class="thead-light">
        <tr>
          <th >ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="text-center"><%= genre.name %></td>
            <td>
              <%= link_to edit_admin_genre_path(genre.id) do %>
                <button type="button" class="btn btn-success">編集する</button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>