<div class="container">
  <div class="mx-auto">
    <h2><span class="badge bg-light text-dark my-3">ログイン</span></h2>
    <h3><span class="badge bg-light text-dark mb-3">会員の方はこちらからログイン</span></h3>
    <%= form_with model:@customer, url: customer_session_path do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス　" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード　　　" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->
      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-primary mt-2" %>
      </div>
    <% end %>
    <h3><span class="badge bg-light text-dark mt-5 mb-3">会員登録がお済みでない方</span></h3>
    <p><%= render "public/shared/links" %> から新規登録を行ってください</p>
  </div>
</div>