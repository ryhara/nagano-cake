<div class="container">
  <div class="mx-auto">
    <h2><span class="badge bg-light text-dark my-3">注文情報入力</span></h2>
    <%= form_with model: @order, url: orders_confirm_path ,　method: :post do |f| %>
      <div class="form-group">
        <p><%= f.label :image, "支払い方法", class: "font-weight-bold" %></p>
        　　<%= f.radio_button :payment_method, "credit_card" , checked: true%>
        　　<%= f.label :payment_method_credit_card, "クレジットカード" %><br>
        　　<%= f.radio_button :payment_method, "transfer" %>
        　　<%= f.label :payment_method_transfer, "銀行振込" %>
      </div>
      <div class="form-group">
        <p><%= f.label :name, "お届け先", class: "font-weight-bold" %></p>
        <%= f.radio_button :address_select, "0", checked: true%>　ご自身の住所<br>
        　　<span><%= current_customer.full_address %></span><br>
        <br>
        <%= f.radio_button :address_select, "1" %>　登録済み住所<br>
        　　<span><%= f.collection_select(:address_id, current_customer.addresses.all, :id, :full_address, prompt: "選択してください") %></span><br>
        <br>
        <%= f.radio_button :address_select, "2" %>　新規住所<br>
      </div>

      <div class="form-group">
        <%= f.label :shipping_post_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :shipping_post_code %>
      </div>
      <div class="form-group">
        <%= f.label :shipping_address, "住所　　　　　　　　　　" %>
        <%= f.text_field :shipping_address, :size =>"50*10" %>
      </div>
      <div class="field">
        <%= f.label :shipping_receiver_name, "宛名　　　　　　　　　　" %>
        <%= f.text_field :shipping_receiver_name %>
      </div>
      
      <div class="actions mt-1">
        <%= f.submit "確認画面へ進む", class:"btn btn-primary w-25 ml-5 mt-2" %>
      </div>
    <% end %>
  </div>
</div>
