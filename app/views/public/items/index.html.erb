<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="mt-3">
        <table class="table table-bordered table-hover">
          <thead>
            <tr　class="font-weight-bold text-center">
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody class="">
            <% @genres.each do |genre| %>
             <tr><td class="text-center"><%= link_to "#{genre.name}", items_path(genre: genre.id) %></td></tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
   
    <div class="col-9 offset-1">
      <div class="my-3">
        <h2 class="font-weight-bold">商品一覧（全<%= @items.count %>件）</h2>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <% if item.is_selling == true %>
              <div class="col-3">
                <%= link_to image_tag(item.get_image(100,100)), item_path(item.id) %><br>
                <p><%= item.name %></p>
                <p>￥<%= item.non_taxed_price %></p>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>