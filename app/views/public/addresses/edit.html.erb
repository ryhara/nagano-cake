<div class="container ">
  <div class="row my-3">
      <div class="mb-3">
        <h2><span class="badge bg-light text-dark">配送先編集</span></h2>
      </div>
    </div>
    <div class="">
        <%= form_with model:@address, url: address_path, method: :patch do |f| %>
          <%= render "public/shared/error_messages", resource: @address %>
          <div class="form-group row">
            <%= f.label :post_code, "郵便番号（ハイフンなし）", class:"col-sm-4 col-form-label" %>
            <div class="col-sm-6">
              <%= f.text_field :post_code, class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :address, "住所", class:"col-sm-4 col-form-label" %>
            <div class="col-sm-6">
              <%= f.text_field :address, class:"form-control"%>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :receiver_name, "宛名", class:"col-sm-4 col-form-label" %>
            <div class="col-sm-6">
              <%= f.text_field :receiver_name, class:"form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.submit "変更内容を保存", class:"btn btn-success ml-5 mt-1 w-25 mx-auto" %>
          </div>
        <% end %>
    </div>
</div>