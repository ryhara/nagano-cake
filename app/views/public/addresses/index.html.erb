<div class="container ">
  <div class="row my-3">
      <div class="mb-3">
        <h2><span class="badge bg-light text-dark">配送先登録・一覧</span></h2>
      </div>
    </div>
    <div class="">
        <%= form_with model:@address, url: addresses_path, method: :post do |f| %>
          <%= render "public/shared/error_messages", resource: @address %>
          <div class="form-group row">
            <%= f.label :post_code, "郵便番号（ハイフンなし）", class:"col-sm-4 col-form-label" %>
            <div class="col-sm-6">
              <%= f.text_field :post_code, class:"form-control" %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :address, "住所", class:"col-sm-4 col-form-label" %>
            <div class="col-sm-6">
              <%= f.text_field :address, class:"form-control"%>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :receiver_name, "宛名", class:"col-sm-4 col-form-label" %>
            <div class="col-sm-6">
              <%= f.text_field :receiver_name, class:"form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.submit "新規登録", class:"btn btn-success ml-5 mt-1 w-25 mx-auto" %>
          </div>
        <% end %>
    </div>
    <div class="col-10">
     <table class="table table-bordered mt-5">
      <thead class="thead-light">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.post_code %></td>
          <td><%= address.address %></td>
          <td><%= address.receiver_name %></td>
          <td>
           <%= link_to edit_address_path(address.id) do %>
              <button type="button" class="btn btn-success mt-1">編集する</button>
           <% end %>
           
           <%= link_to address_path(address.id), method: :delete, data:{ confirm: "本当に削除しますか？"}  do %>
              <button type="button" class="btn btn-danger mt-1 ml-3">削除する</button>
           <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>